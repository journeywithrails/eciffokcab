<% @items.each do |item| %>
<% @tempvar = "0" %>
<% if item.receivedon.size.to_i != @tempvar.to_i then @data1 = 'foo' end %>
  <tr class="background<%= item.receivedon.size %>" >
    <td><%= item.id %></td>
    <td><%= item.requestedon %></td>
    <td><%= item.ticketnum %></td>
    <td><%= item.parturl %></td>
    <td><%= item.shipping %></td>
    <td><%= item.deststore %></td>
    <td><%= item.orderedby %></td>
    <td><%= item.orderedon %></td>
    <td><%= item.trackingnum %></td>
    <td><%= item.receivedon %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Delete', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

